{
	"name": "lery",
	"version": "0.1.4",
	"description": "Lightweight SWR analog",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"type": "module",
	"private": false,
	"license": "MIT",
	"author": {
		"name": "Ivan Popov",
		"email": "iiivanpopov999@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/iiivanpopov/lery.git"
	},
	"homepage": "https://github.com/iiivanpopov/lery#readme",
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"scripts": {
		"build:esm": "bun build ./src/index.ts --outdir ./dist/esm --minify --target bun --format esm --sourcemap=none",
		"build:cjs": "bun build ./src/index.ts --outdir ./dist/cjs --minify --target bun --format cjs --sourcemap=none",
		"build:types": "tsc -p tsconfig.types.json",
		"build": "bun run build:esm && bun run build:cjs && bun run build:types",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"typescript",
		"cache",
		"query",
		"fetch",
		"lightweight"
	]
}
