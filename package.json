{
	"name": "lery",
	"version": "0.3.3",
	"description": "Lightweight SWR analog",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"type": "module",
	"private": false,
	"license": "MIT",
	"author": {
		"name": "Ivan Popov",
		"email": "iiivanpopov999@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/iiivanpopov/lery.git"
	},
	"homepage": "https://github.com/iiivanpopov/lery#readme",
	"devDependencies": {
		"@types/bun": "^1.2.17",
		"typescript": "^5.8.3"
	},
	"scripts": {
		"clean": "rm -rf ./dist",
		"build:esm": "bun build ./src/index.ts --outdir ./dist --minify --packages external --sourcemap=none --drop console --drop debugger --format esm --target=browser",
		"build:types": "tsc -p tsconfig.types.json",
		"build": "bun run build:esm && bun run build:types",
		"prepublishOnly": "bun clean && bun run build"
	},
	"sideEffects": false,
	"keywords": [
		"typescript",
		"cache",
		"query",
		"fetch",
		"lightweight"
	]
}
